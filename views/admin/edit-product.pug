extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/form.css")

block content
  main
    if editing
      form.product-form(action="/admin/edit-product", method="POST")
    else
      form.product-form(action="/admin/add-product", method="POST")
        .form-control
          label(for="title") Title
          input(type="text", name="title", value=(editing ? product.title : ''))#title
        .form-control
          label(for="imgUrl") Image URL
          input(type="text", name="imgUrl", value=(editing ? product.imgUrl : ''))#imgUrl
        .form-control
          label(for="price") Price
          input(type="number", name="price", step="0.01", value=(editing ? product.price : ''))#price
        .form-control
          label(for="description") Description
          textarea(name="description", rows="5", value=(editing ? product.description : ''))#description
        if editing
          input(type="hidden", value=product.id, name="productId")
          button.btn(type="submit") Edit Product
        else
          button.btn(type="submit") Add Product
